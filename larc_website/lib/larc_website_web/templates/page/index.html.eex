<%= live_render(@conn, LarcWebsiteWeb.ProjectsLive) %>

<!-- The Team -->
<%= live_render(@conn, LarcWebsiteWeb.TeamLive) %>

<!-- Contact Us Parallax -->
<%= live_render(@conn, LarcWebsiteWeb.ContactLive) %>
</html>
